set -e

bindir=$(realpath "$(dirname "$0")")
rootdir="$bindir"/..
nodemodulesdir="$rootdir/node_modules"

srcdir="$rootdir"/src
libdir="$rootdir"/lib
# --- common utils for tests.
tstdir="$srcdir"/__tests__

nodecmd=node
lsccmd="$nodemodulesdir"/.bin/lsc
babelcmd="$nodemodulesdir"/.bin/babel

# ------ short-circuit on emptiness.
doublebar() {
    if [ -n "$1" ]; then echo "$1"; else echo "$2"; fi
}
ternary() {
    if [ -n "$1" ]; then echo "$2"; else echo "$3"; fi
}

# vim: ft=sh
