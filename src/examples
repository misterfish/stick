const isOdd = x => x | cond ([
    0 | eq | guard (F),
    1 | eq | guard (T),
    (dec >> isEven) | otherwise,
])

const isEven = x => x | cond ([
    0 | eq | guard (T),
    1 | eq | guard (F),
    (dec >> isOdd) | otherwise,
])


